<Window x:Class="HRD.EditEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование сотрудника" Height="350" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Имя"/>
            <TextBox x:Name="FirstNameTextBox" Width="200"/>

            <TextBlock Text="Фамилия"/>
            <TextBox x:Name="LastNameTextBox" Width="200"/>

            <TextBlock Text="Статус"/>
            <ComboBox x:Name="StatusComboBox" Width="200">
                <ComboBoxItem Content="Работает"/>
                <ComboBoxItem Content="Уволен"/>
            </ComboBox>

            <!-- Кнопки "Сохранить" и "Назад" -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0" Width="238">
                <Button Content="Сохранить" Background="#4CAF50" Width="100" Click="SaveButton_Click"/>
                <Button Content="Назад" Background="#2196F3" Width="100" Margin="10,0,0,0" Click="BackButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
