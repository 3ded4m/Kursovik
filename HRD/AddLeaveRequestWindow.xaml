<Window x:Class="HRD.AddLeaveRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить заявку на отпуск" Width="400" Height="300"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Сотрудник" FontSize="16"/>
            <ComboBox x:Name="EmployeeComboBox" Width="300" Margin="0,5,0,15"/>

            <TextBlock Text="Дата начала" FontSize="16"/>
            <DatePicker x:Name="StartDatePicker" Width="300" Margin="0,5,0,15"/>

            <TextBlock Text="Дата окончания" FontSize="16"/>
            <DatePicker x:Name="EndDatePicker" Width="300" Margin="0,5,0,15"/>

            <Button Content="Добавить" Width="100" HorizontalAlignment="Right" Click="AddLeaveRequestButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
