<Window x:Class="HRD.RequestLeaveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Запрос на отпуск" Width="400" Height="330"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Запрос на отпуск" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Дата начала:"/>
            <DatePicker x:Name="StartDatePicker" Width="200" Margin="0,5,0,10"/>

            <TextBlock Text="Дата окончания:"/>
            <DatePicker x:Name="EndDatePicker" Width="200" Margin="0,5,0,20"/>

            <Button Content="Отправить запрос" Width="150" Height="30" HorizontalAlignment="Center" Click="SubmitRequest_Click" Margin="0,0,0,20"/>

            <!-- Кнопки "Назад" и "Выход" внизу окна -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Назад" Background="#2196F3" Width="100" Height="30" Margin="5" Click="BackButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
