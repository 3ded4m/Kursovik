<Window x:Class="HRD.AddEditTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить/Редактировать задачу" Width="400" Height="300"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Название задачи" FontSize="14"/>
            <TextBox x:Name="TitleTextBox" Width="300" Margin="0,5,0,10"/>

            <TextBlock Text="Описание задачи" FontSize="14"/>
            <TextBox x:Name="DescriptionTextBox" Width="300" Margin="0,5,0,10"/>

            <TextBlock Text="Срок выполнения" FontSize="14"/>
            <DatePicker x:Name="DueDatePicker" Width="300" Margin="0,5,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Сохранить" Width="100" Margin="5" Click="SaveButton_Click"/>
                <Button Content="Отмена" Width="100" Margin="5" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
