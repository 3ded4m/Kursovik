<Window x:Class="HRD.EmployeeOfTheMonthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Назначить Работника месяца" Width="400" Height="300"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Top">
            <TextBlock Text="Выберите Работника месяца:" FontSize="16" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            <ComboBox x:Name="EmployeeComboBox" Width="250" Height="30" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <Button Content="Назначить" Width="120" Height="35" Background="#4CAF50" Foreground="White" HorizontalAlignment="Center"
                    Click="AssignEmployeeOfTheMonth_Click"/>
        </StackPanel>

        <!-- Кнопки "Назад" и "Выход" -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,10,0,0">
            <Button Content="Назад" Width="80" Height="30" Background="#2196F3" Foreground="White" Click="BackButton_Click"/>
            <Button Content="Выход" Width="80" Height="30" Background="#f44336" Foreground="White" Click="ExitButton_Click" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
