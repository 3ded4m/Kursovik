<Window x:Class="HRD.LeaveBalanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Отпускные дни" Width="400" Height="300" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Center">
            <TextBlock Text="Отпускные дни" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" TextAlignment="Center"/>
            <TextBlock x:Name="RemainingLeaveDaysTextBlock" FontSize="14" Foreground="Green" Margin="0,0,0,20" TextAlignment="Center"/>
            <Button Content="Запрос на отпуск" Width="150" Height="30" Click="RequestLeaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
