<Window x:Class="HRD.EditEducationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать образование" Width="400" Height="300" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Степень" />
            <TextBox x:Name="DegreeTextBox" />

            <TextBlock Text="Учебное заведение" Margin="0,10,0,0"/>
            <TextBox x:Name="InstitutionTextBox" />

            <TextBlock Text="Год окончания" Margin="0,10,0,0"/>
            <TextBox x:Name="GraduationYearTextBox" />

            <TextBlock Text="Специализация" Margin="0,10,0,0"/>
            <TextBox x:Name="SpecializationTextBox" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Сохранить" Width="100" Margin="5" Click="SaveButton_Click"/>
                <Button Content="Отмена" Width="100" Margin="5" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
