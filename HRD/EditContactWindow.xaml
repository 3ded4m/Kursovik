<Window x:Class="HRD.EditContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать контакт" Width="400" Height="300">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Телефон:"/>
            <TextBox x:Name="PhoneTextBox" Width="200"/>

            <Label Content="Email:"/>
            <TextBox x:Name="EmailTextBox" Width="200"/>

            <Label Content="Адрес:"/>
            <TextBox x:Name="AddressTextBox" Width="200"/>

            <Button Content="Сохранить" Width="150" Click="SaveButton_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
